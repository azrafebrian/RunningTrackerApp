<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_utama"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/main_body" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="96dp" >
        <ImageButton
            android:id="@+id/button_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_mulai">
        </ImageButton>
        <TextView
            android:id="@+id/mulai_berlari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mulai_berlari"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"  />

        <ImageButton
            android:id="@+id/button_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_mulai"
            android:background="@drawable/button_history">
        </ImageButton>
        <TextView
            android:id="@+id/mulai_sejarah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_mulai"
            android:text="@string/mulai_sejarah"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"  />

        <ImageButton
            android:id="@+id/button_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_history"
            android:background="@drawable/button_stats">
        </ImageButton>
        <TextView
            android:id="@+id/mulai_statistik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_history"
            android:text="@string/mulai_statistik"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"  />
    </RelativeLayout>


