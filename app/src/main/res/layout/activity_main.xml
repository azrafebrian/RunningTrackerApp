<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/main_body" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="96dp" >
        <ImageButton
            android:id="@+id/button_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_mulai">
        </ImageButton>
        <TextView
            android:id="@+id/mulai_berlari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mulai_berlari"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"  />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276dp"
        android:background="@color/lima"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/jarak"
                android:textSize="13sp"
                android:textColor="@color/tiga"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/kalori"
                android:textSize="13sp"
                android:textColor="@color/tiga"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/waktu"
                android:textSize="13sp"
                android:textColor="@color/tiga"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>