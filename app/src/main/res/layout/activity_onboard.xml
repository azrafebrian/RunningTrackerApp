<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboard_image"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onboard_title"
        android:background="@drawable/ic_onboard_image" />

    <TextView
        android:id="@+id/onboard_title"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="45dp"
        android:text="@string/onboard_text"
        android:textAppearance="@style/onboard_style" />

    <Button
        android:id="@+id/onboard_button"
        android:layout_centerHorizontal="true"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/onboard_image"
        android:background="@drawable/onboard_button"
        android:text="@string/mulai"
        android:onClick="loginMenu"/>
</RelativeLayout>